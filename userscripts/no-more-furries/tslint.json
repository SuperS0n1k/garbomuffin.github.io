{
  "rules": {
    "semicolon": true,

    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],

    "whitespace": [
      true,
      "check-branch",
      "check-decl"
    ]
  }
}
